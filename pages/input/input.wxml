<!--pages/input/input.wxml-->
 <import src="../../common/head.wxml" />
<import src="../../common/foot.wxml" />

<view class="container">
  <view class="page-body">
    <view class="page-section">
      <view class="weui-cells__title">申请人</view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <text class="weui-input">{{applyName}}</text>
        </view>
      </view>
    </view>
    <view class="page-section">
      <view class="weui-cells__title">请输入申请内容</view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <input class="weui-input"bindinput='getApplyContent' placeholder="输入申请内容"/>
        </view>
      </view>
    </view>
    <view class="page-section">
      <view class="weui-cells__title">审批人</view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <text class="weui-input">{{toName}}</text>
        </view>
      </view>
    </view>
    <view class="page-section">
      <view class="weui-cells__title">申请时间</view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <text class="weui-input">{{applyTime}}</text>
        </view>
      </view>
    </view>
    
    <button bindtap='submit'>提交</button>
   
  
  
  </view>
</view>